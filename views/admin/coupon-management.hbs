<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-10 mx-auto ">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title m-b-0">COUPON MANAGEMENT</h5>
                    <!-- Add Coupon modal -->
                    <button type="button" class="btn btn-outline-primary d-flex justify-content-start mb-4"
                        data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Add Coupon
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    {{!-- <h5 class="modal-title" id="exampleModalLabel">Add Coupon</h5> --}}
                                    <h4 class="font-weight-semi-bold mb-2">ADD NEW COUPON</h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form class=" mx-auto border p-5 mt-5" action="/admin/coupons" method="post"
                                        id="couponForm">

                                        <div class="row">
                                            <div class="col-md-6 form-group">
                                                <label>Name</label>
                                                <input class="form-control" type="text" name="name" id="name" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>Code</label>
                                                <input class="form-control" type="text" name="code" id="code" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>Description</label>
                                                <input class="form-control" type="text" name="description"
                                                    id="description">
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>Discount</label>
                                                <input class="form-control" type="number" name="percentage"
                                                    id="percentage" required>
                                            </div>
                                        </div>

                                        <!-- Submit button -->
                                        <div class="col mt-5">
                                            <button form="couponForm" type="submit"
                                                class="btn btn-outline-success btn-lg btn-block  mx-auto">Add
                                                Coupon</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="table-responsive">
                        <table class="table" id="dataTable">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">COUPON NAME</th>
                                    <th scope="col">CODE</th>
                                    <th scope="col">DESCRIPTION</th>
                                    <th scope="col">DISCOUNT</th>
                                    <th scope="col">EDIT</th>
                                    <th scope="col">DELETE</th>

                                </tr>
                            </thead>
                            <tbody class="customtable">
                                {{#each coupons}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.code}}</td>
                                    <td>{{this.description}}</td>
                                    <td>{{this.percentage}}%</td>
                                    {{!-- <td><a class="btn" onclick="editCoupon('{{this._id}}')">EDIT</a></td> --}}
                                    <td>
                                        <!-- Edit Coupon Modal -->
                                        <button type="button" class="btn btn-outline-info" data-bs-toggle="modal"
                                            data-bs-target="#ModalEdit{{this._id}}"> <i class="bi bi-pencil-fill"></i>
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="ModalEdit{{this._id}}" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="font-weight-semi-bold mb-2">EDIT COUPON</h4>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form class=" mx-auto border p-5 mt-5 couponForm1"
                                                            action="/admin/edit-coupon/{{this._id}}" method="post"
                                                            id="editForm{{this._id}}">

                                                            <div class="row">
                                                                <div class="col-md-6 form-group">
                                                                    <label>Name</label>
                                                                    <input class="form-control" type="text" name="name"
                                                                        id="name" value="{{this.name}}">
                                                                </div>
                                                                <div class="col-md-6 form-group">
                                                                    <label>Code</label>
                                                                    <input class="form-control" type="text" name="code"
                                                                        id="code" value="{{this.code}}">
                                                                </div>
                                                                <div class="col-md-6 form-group">
                                                                    <label>Description</label>
                                                                    <input class="form-control" type="text"
                                                                        name="description" id="description"
                                                                        value="{{this.description}}">
                                                                </div>
                                                                <div class="col-md-6 form-group">
                                                                    <label>Discount</label>
                                                                    <input class="form-control" type="number"
                                                                        name="percentage" id="percentage"
                                                                        value="{{this.percentage}}">
                                                                </div>
                                                            </div>

                                                            <!-- Submit button -->
                                                            <div class="col mt-5">
                                                                <button type="button" class="btn btn-outline-danger"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button form="editForm{{this._id}}" type="submit"
                                                                    class="btn btn-outline-success btn-block col-4 mx-auto">Edit
                                                                    Coupon</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td><a href="/admin/delete-coupon/{{this._id}}"
                                            onclick="return confirm('Are you sure you want to delete  {{this.name}}?')"
                                            class="confirm btn btn-outline-danger"><i class="bi bi-trash"></i></a></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>