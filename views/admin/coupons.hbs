  <div class="container mt-5">
    <div class="row d-flex justify-content-start">
      {{#each coupons}}
        <div class=" col-lg-4 col-md-6 col-sm-12">
          <form action="/coupons" method="post">
          
            <div class="card border border-primary rounded mb-4">
                <div class="text-center mt-3 mb-3"> <small class="text">{{this.name}}</small> </div>
                <div class="d-flex justify-content-center px-2">
                    <div class="d-flex flex-row">
                        <h1 class="off mt-3 ">{{this.percentage}}%</h1>
                    </div>
                </div>
                <div class="line">
                </div>
                <div class="text-center mb-4"> <h4 class="text-uppercase">USE CODE:{{this.code}}</h4/> </div>
                <div class="text-right p-1"> <small>*T&C APPLY</small> </div>
            </div>
           
            </form>
        </div>
         {{/each}}
    </div>
</div