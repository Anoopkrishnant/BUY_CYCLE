<div class="container-fluid mt-5 mb-5">

    <div class="row d-flex justify-content-center">

        <div class="col-md-8">

            <div class="card">


                <div class="invoice p-5">

                    <h2 class="text-success">Order Details</h2>

                    <span class="font-weight-bold d-block mt-4">Hello,{{singleOrder.userId.name}}</span>
                    

                    <div class="payment border-top mt-3 mb-3 border-bottom table-responsive">

                        <table class="table table-borderless">

                            <tbody>
                                <tr>
                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Order Date</span>
                                            <span>{{format singleOrder.createdAt}}</span>

                                        </div>
                                    </td>

                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Order No</span>
                                            <span>MT12332345</span>

                                        </div>
                                    </td>

                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Payment</span>
                                            <span><img src="https://img.icons8.com/color/48/000000/mastercard.png"
                                                    width="20" /> {{singleOrder.paymentDetails}}</span>

                                        </div>
                                    </td>

                                    <td>
                                        <div class="py-2">

                                            <span class="d-block text-muted">Shiping Address</span>
                                            <span>{{singleOrder.deliveryDetails.address.deliveryaddress}} <br>
                                            {{singleOrder.deliveryDetails.address.city}},{{singleOrder.deliveryDetails.address.state}},
                                            {{singleOrder.deliveryDetails.address.pin}}</span>

                                        </div>
                                    </td>
                                </tr>
                            </tbody>

                        </table>





                    </div>




                    <div class="product border-bottom table-responsive">

                        <table class="table table-borderless">

                            <tbody>
                                {{#with singleOrder}}
                                {{#each orderItems}}

                                <tr>
                                    <td width="20%">

                                        <img src="/productimages/{{product.image.[0]}}" width="90">

                                    </td>

                                    <td width="60%">
                                        <span class="font-weight-bold">{{product.productname}}</span>
                                        <div class="product-qty">
                                            <span class="d-block"></span>
                                            <span>Qty : {{this.quantity}}</span>

                                        </div>
                                    </td>
                                    <td width="20%">
                                        <div class="text-right">
                                            <span class="font-weight-bold">â‚¹ {{product.price}}</span>
                                        </div>
                                    </td>
                                </tr>

                            {{/each}}
                            {{/with}}
                            </tbody>

                        </table>



                    </div>



                    <div class="row d-flex justify-content-end">

                        <div class="col-md-5">

                            <table class="table table-borderless">

                                <tbody class="totals">

                                    <tr>
                                        <td>
                                            <div class="text-left">

                                                <span class="text-muted">Subtotal</span>

                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <span>{{singleOrder.totalPrice}}</span>
                                            </div>
                                        </td>
                                    </tr>

                                    <tr class="border-top border-bottom">
                                        <td>
                                            <div class="text-left">

                                                <span class="font-weight-bold">Total Payable Amount :</span>

                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-right">
                                                <h4 class="font-weight-bold">{{singleOrder.totalPrice}}</h4>
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>

                            </table>

                        </div>



                    </div>


                </div>


                <div class="d-flex justify-content-between footer p-3">

                    <span>Need Help? visit our <a href="#"> help center</a></span>
                    <span><a type="submit" class="btn btn-outline-warning"  href="/admin/order-management">Back</a></span>

                </div>

            </div>

        </div>

    </div>

</div>