<section style="background-color: #eee;">
    <div class="container py-3">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                        <li class="breadcrumb-item active" aria-current="page">Orders</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="/userimages/{{userData.image.filename}}"
                            alt="avatar" class="rounded img-fluid" style="width: 150px;">
                        <h5 class="my-3">{{userData.name}}</h5>
                        <p class="text-muted mb-1">{{userData.email}}</p>
                        <p class="text-muted mb-4">{{userData.address}}</p>
                        <div class="d-flex justify-content-center mb-2">
                           <a type="submit" href="/" class="btn btn-primary">home</a>
                           <a type="submit" href="/add-to-cart" class="btn btn-outline-primary ms-1">cart</a>
                        </div>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">

                    <div class="card">
                        <div class="card-body">
                            <ul class="nav nav-pills flex-column gap-2">
                                <li class="nav-item">
                                    <a class="nav-link " href="/user-profile">My Profile </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="./buyer-dashboard.html">My Addresses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  active " href="/orders">My Orders </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/wishlist">Wishlist</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-lg-8">
                <div class="card mb-4 ">
                    <div class="card-body ">
                        <h5 class="mb-4">My Orders</h5>

                        <div class="table-responsive">
                            <table class="table table-custom table-lg mb-0" id="orders">
                                <thead>
                                    <tr>

                                        <th>Date</th>
                                        <th>Product</th>
                                        {{!-- <th>Quantity</th> --}}
                                        <th>Total Price</th>
                                        <th>Payment Type</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                {{#each allOrders}}
                                <tbody>
                                    
                                    <tr>
                                        <td>{{format this.createdAt}}</td>
                                        
                                        <td> {{#each this.orderItems}}{{this.product.productname}} <br><br> {{/each}} </td>
                                        
                                        {{!-- <td>2</td> --}}
                                        <td>{{this.totalPrice}}</td>
                                        <td>{{this.paymentDetails}}</td>
                                        <td>
                                            <span class="badge bg-primary">{{this.deliveryStatus}}</span>
                                        </td>
                                        <td class="text-end">
                                            <div class="d-flex">
                                                <div class="dropdown ms-auto">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-floating"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        <i class="bi bi-three-dots"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <a href="/trackOrder/{{this._id}}" class="dropdown-item">Show</a>
                                                        <a href="#" class="dropdown-item">Edit</a>
                                                        <a href="#" class="dropdown-item">Cancel</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                  
                                </tbody>
                                  {{/each}}
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>